{
  "name": "Carvio",
  "description": "Don't worry about it",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "content_scripts": [{
    "js": ["content.js"],
    "css": ["styles.css"],
    "matches": ["https://*.craigslist.org/*"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Carvio"
  },
  "manifest_version": 2
}
